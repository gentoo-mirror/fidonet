CONFFILE="/etc/openarc/${RC_SVCNAME}.conf"
required_files="${CONFFILE}"

command="/usr/sbin/openarc"
pidfile="/run/${RC_SVCNAME}.pid"
command_args="-P ${pidfile} -x ${CONFFILE}"

depend() {
	use dns logger net
	before mta
}

